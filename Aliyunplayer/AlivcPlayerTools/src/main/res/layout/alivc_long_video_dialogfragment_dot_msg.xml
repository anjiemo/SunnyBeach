<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dot_view_msg_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/alivc_common_dialog_circle_progress_background"
    android:padding="@dimen/alivc_common_padding_4">

    <TextView
        android:id="@+id/tv_dot_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/alivc_common_margin_2"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="@dimen/alivc_common_height_group_100"
        android:maxLines="2"
        android:textColor="@color/alivc_common_font_white"
        android:textSize="@dimen/alivc_common_font_10" />

</FrameLayout>