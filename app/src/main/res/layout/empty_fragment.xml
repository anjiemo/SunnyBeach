<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context=".ui.fragment.EmptyFragment">

    <com.hjq.shape.view.ShapeImageView
        android:id="@+id/iv_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="20dp"
        android:padding="1dp"
        android:src="@mipmap/ic_default_avatar"
        app:shape_type="oval"
        app:shape_strokeColor="@color/pink"
        app:shape_strokeSize="2dp" />

    <cn.cqautotest.sunnybeach.widget.AvatarDecorView
        android:id="@+id/iv_avatar_decor_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_default_avatar" />

    <cn.cqautotest.sunnybeach.widget.PileLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_40">

        <cn.cqautotest.sunnybeach.widget.AvatarDecorView
            android:id="@+id/iv_avatar1"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            tools:src="@mipmap/ic_default_avatar" />

        <cn.cqautotest.sunnybeach.widget.AvatarDecorView
            android:id="@+id/iv_avatar2"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            tools:src="@mipmap/ic_default_avatar" />

        <cn.cqautotest.sunnybeach.widget.AvatarDecorView
            android:id="@+id/iv_avatar3"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            tools:src="@mipmap/ic_default_avatar" />

    </cn.cqautotest.sunnybeach.widget.PileLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:divider="#CD4848"
        android:showDividers="middle"
        android:dividerPadding="@dimen/dp_20"
        android:layout_height="@dimen/dp_54">

        <TextView
            android:text="动态"
            android:layout_width="0px"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" />

        <TextView
            android:text="关注"
            android:layout_width="0px"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" />

        <TextView
            android:text="粉丝"
            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/empty_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="该界面正在装修ing"
        android:textColor="@color/pink"
        android:textIsSelectable="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_markdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/number_keyboard_view"
        layout="@layout/number_keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>